<div class="container mt-3" >
  <div class="row">
    <div class="col-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table font-weight-bold">
        <tbody>
          <tr>
            <td scope="row">name</td>
            <td scope="row"><%= @user.name %></td>
          </tr>
          <tr>
            <td scope="row">introduction</td>
            <td scope="row"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>


      <!--Newbookの呼び出し-->
      <%= render 'newbook', book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td scope="row">
              <%= link_to(user_path(book.user.id)) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
              </td>
            <td scope="row">
              <%= link_to(book_path(book.id)) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td scope="row">
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
