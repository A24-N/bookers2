<div class="container">
  <div class="row">
    <div class="mx-auto col-6">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
      <div class="form-group mb-0">
        <%= f.label :Nmae %><br>
        <%= f.text_field :name, class: 'form-control' %><br>
      </div>
      <div class="form-group mb-0">
        <%= f.label :Image %><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
      <div class="form-group mb-0">
        <%= f.label :Introduction %><br>
        <%= f.text_area :introduction, class: 'form-control' %><br>
      </div>
        <%= f.submit 'Update User',class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>