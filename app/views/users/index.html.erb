<h1>User info</h1>
<%= image_tag current_user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= current_user.introduction %></td>
    </tr>
  </tbody>
</table>

<%= link_to "編集", edit_user_path(current_user.id) %>

<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :get do |f| %>
  <%= f.label :Title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :Opinion %><br>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
   </tbody>
</table>